lotsofhellos = "hello" * 10  # all hellos close together -> hellohellohello etc
print(lotsofhellos)


even_numbers = [2, 4, 6, 8]
odd_numbers = [1, 3, 5, 7]
all_numbers = odd_numbers + even_numbers
print(all_numbers)

print([1, 2, 3] * 3)  # repeat the sequence 3 times
